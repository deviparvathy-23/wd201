<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo App</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script>
    function validateForm() {
      const title = document.forms["todoForm"]["title"].value;
      const dueDate = document.forms["todoForm"]["dueDate"].value;
      if (!title || !dueDate) {
        alert("Title and Due Date must be filled out.");
        return false;
      }
      return true;
    }
  </script>
</head>
<body>
  <%- include('header.ejs') %>

  <h1>Todo Manager</h1>

  <!-- Form to add a new todo -->
  <form name="todoForm" action="/todos" method="POST" onsubmit="return validateForm()">
    <input type="text" name="title" placeholder="Enter todo title" required>
    <input type="date" name="dueDate" required>
    <button type="submit">Add</button>
  </form>

  <!-- Include todos.ejs -->
  <%- include('todos', { overdueTodos, dueTodayTodos, dueLaterTodos, completedTodos }) %>
</body>
</html>
